<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="12dp">

        <com.hemaapp.hm_FrameWork.view.RoundedImageView
            android:id="@+id/iv_image"
            android:layout_width="85dp"
            android:layout_height="87dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_blog_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="民谣在线"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_7.5" />

                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="张延山"
                        android:textColor="@color/hui"
                        android:textSize="@dimen/textsize_6.5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_huiting"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="回  听"
                    android:textColor="#E9AD00"
                    android:textSize="@dimen/textsize_6.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingTop="0dp"
                android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textColor="@color/word_black"
                android:textSize="@dimen/textsize_6.5" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="评论/0"
                android:textColor="@color/hui"
                android:textSize="@dimen/textsize_6" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@color/line"
        tools:ignore="ContentDescription" />

</LinearLayout>